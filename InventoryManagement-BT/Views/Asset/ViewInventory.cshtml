<h2>View Inventory</h2>

<div class="row">
    <div class="col-sm-6">
        @Html.Partial("_viewInventoryForm")
    </div>

    <div class="col-sm-6">
        <div id="search-results"></div>
        <div id="page-description">
            <p>
                Enter search criteria to display a list of matching inventory items.
            </p>
            <p>
                Keyword Search will return items containing the keyword in any field.
            </p>
        </div>
    </div>
</div>

<div id="add-inventory-container"></div>


@section scripts {
    <script src="@Url.Content("~/Scripts/take-inventory.js")"></script>
}
