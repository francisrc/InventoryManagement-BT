@model InventoryManagement_BT.ViewModels.InventoryFormViewModel

@using (Html.BeginForm("TakeInventory", "Asset", FormMethod.Post, new { @class = "take-inventory-form form-inline" }))
{

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-md-3 col-lg-3">
            <div class="form-group">
                @Html.LabelFor(x => x.ItemKey, new {@class = "control-label"}):
                @Html.TextBoxFor(x => x.ItemKey, new {@class = "form-control", placeholder = "Enter Asset Tag"})
            </div>
            <div>
                @Html.ValidationMessageFor(x => x.ItemKey, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-4 col-lg-4">
            <div class="form-group">
                @Html.LabelFor(x => x.InventoryOwner, new {@class = "control-label"}):
                @Html.TextBoxFor(x => x.InventoryOwner, new {@class = "form-control"})
            </div>
            <div>
                @Html.ValidationMessageFor(x => x.InventoryOwner, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-2 col-lg-2">
            <div class="form-group">
                @Html.LabelFor(x => x.SelectedLocationId):
                @Html.DropDownListFor(x => x.SelectedLocationId, Model.LocationItems, new { @class = "form-control" })
            </div>
        </div>

        <div class="col-md-2 col-lg-3">
            <div class="form-group">
                @Html.LabelFor(x => x.SelectedClientSiteId):
                @Html.DropDownListFor(x => x.SelectedClientSiteId, Model.ClientSiteItems, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 col-lg-12">
            @Html.HiddenFor(x => x.InventoriedBy)
            @Html.HiddenFor(x => x.InventoryDate)
            <button type="submit" class="btn btn-default">Search Inventory</button>
        </div>
    </div>
}
