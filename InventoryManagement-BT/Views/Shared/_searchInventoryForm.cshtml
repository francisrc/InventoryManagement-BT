@model InventoryManagement_BT.ViewModels.SearchViewModel


@using (Html.BeginForm("SearchInventory", "Asset", FormMethod.Post, new { @class = "search-inventory-form form-horizontal" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(x => x.KeywordSearch, new {@class = "control-label col-sm-4 "})
        <div class="col-sm-8">
            @Html.TextBoxFor(x => x.KeywordSearch, "", new { @class = "form-control" })
        </div>

        @Html.ValidationMessageFor(x => x.KeywordSearch, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Item, new {@class = "control-label col-sm-4 "})
        <div class="col-sm-8">
            @Html.TextBoxFor(x => x.Item, "", new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(x => x.Item, "", new {@class = "text-danger"})
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.SelectedLocationId, new {@class = "control-label col-sm-4"})
        <div class="col-sm-8">
            @Html.DropDownListFor(x => x.SelectedLocationId, Model.LocationItems, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.SelectedClientSiteId, new {@class = "control-label col-sm-4"})
        <div class="col-sm-8">
            @Html.DropDownListFor(x => x.SelectedClientSiteId, Model.ClientSiteItems, new { @class = "form-control" })
        </div>
   </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" name="submit-search" value="Submit" class="btn btn-primary pull-right" />
        </div>
    </div>
}