@model List<InventoryManagement_BT.Models.SearchResultsViewModel>


@if(Model.Count == 0)
{
    <p>No Search Results</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Asset Tag</th>
                <th>Product</th>
                <th>Manufacturer</th>
                <th>Model</th>
                <th>Location</th>
                <th>Inventory Owner</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Ajax.ActionLink(item.AssetTag.ToString(), "EditAsset", new { assetKey = item.AssetTag }, new AjaxOptions { UpdateTargetId = "add-inventory-container", InsertionMode = InsertionMode.Replace, OnSuccess = "ShowAddInventoryModal" }, null)
                    </td>
                    <td>@item.Product</td>
                    <td> @item.Manufacturer </td>
                    <td>@item.Model</td>
                    <td>@item.Location</td>
                    <td>@item.InventoryOwner</td>
                </tr>
            }
        </tbody>
    </table>
}




