@model InventoryManagement_BT.Models.SearchViewModel

@section scripts {
    <script src="@Url.Content("~/Scripts/take-inventory.js")"></script>
}

<h2>View Inventory</h2>
<div class="row">
    <div class="col-md-6">
        @using (Ajax.BeginForm("SearchInventory", "Inventory", new AjaxOptions { InsertionMode = InsertionMode.Replace, OnSuccess = "HidePageDescription", UpdateTargetId = "search-results" }))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(x => x.KeywordSearch, new { @class = "control-label" }):
                    @Html.TextBoxFor(x => x.KeywordSearch, "", new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(x => x.Item, new { @class = "control-label" }):
                    @Html.TextBoxFor(x => x.Item, "", new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(x => x.SelectedLocationId):
                    @Html.DropDownListFor(x => x.SelectedLocationId, Model.LocationItems, new { @class = "form-control" })
                </div>

            </div>
            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(x => x.SelectedClientSiteId):
                    @Html.DropDownListFor(x => x.SelectedClientSiteId, Model.ClientSiteItems, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-12">
                <input type="submit" name="submit-search" value="Submit" class="btn btn-primary pull-right" />
            </div>
        }
    </div>

    <div class="col-md-6">
        <div id="search-results">
        </div>
        <div id="page-description">
            <p>
                Enter search criteria to display a list of matching inventory items.
            </p>
            <p>
                Keyword Search will return items containing the keyword in any field.
            </p>
        </div>
    </div>
</div>

<div id="add-inventory-container">

</div>

